{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Action",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "env": {
                "CI": "true"
            },
            "args": [
                "--root", 
                "../sublime-ui", 
                "action", 
                "--type", 
                "branch", 
                "--env", 
                "develop"
            ]
        },
        {
            "name": "Launch Workspace",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "workspace",
                "--organization",
                "websublime",
            ]
        },
        {
            "name": "Launch Create",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "--root", 
                "./sublime-ui",
                "create"
            ]
        },
        {
            "name": "Launch Register",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "register"
            ]
        },
        {
            "name": "Launch Login",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "login",
                "--email", 
                "miguel.ramos@websublime.dev",
                "--password",
                "secret_password"
            ]
        },
        {
            "name": "Launch Status",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "--root", 
                "./sublime-ui",
                "status"
            ]
        },
        {
            "name": "Launch Root",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": []
        }
    ]
}