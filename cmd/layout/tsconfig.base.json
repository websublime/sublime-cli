{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": false,
    "composite": true,
    "incremental": true
  },
  "exclude": ["**/tests/**", "**/dist/**", "**/.nuxt/**"],
  "references": [
    {
      "path": "./libs/vite",
      "name": "@cookyer/ws-libs-vite"
    },
    {
      "path": "./libs/ws-ui-common",
      "name": "@cookyer/ws-ui-common"
    },
    {
      "path": "./libs/ws-ui-inspector",
      "name": "@cookyer/ws-ui-inspector"
    },
    {
      "path": "./packages/ws-ui-header",
      "name": "@cookyer/ws-ui-header"
    }
  ]
}
