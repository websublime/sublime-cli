{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": false
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules"],
  "extends": "../../tsconfig.base.json"
}
